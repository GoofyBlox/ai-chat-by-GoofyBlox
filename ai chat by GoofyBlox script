-- Function to display the notification
local function showNotification(made by GoofyBlox)
    notificationLabel.Text = message
    notificationLabel.Visible = true
    
    -- Hide the notification after 5 seconds
    wait(5)
    notificationLabel.Visible = false
end

-- Display a notification when the player joins
showNotification("subscribe to GoofyBlox!")

getgenv().bot_name  = "Goofyblox" .. game.Players.LocalPlayer.Name --/ change name with 
quotation mark. ex : "GoofyBlox" or 'GoofyBlox'
getgenv().bot_owner = "Goofyblox" --/ this too
getgenv().slashtorespond = false --/ respond to player when they say /botin [msg]
getgenv().max_dist = 30 --/ respond to player in distance

--/ say "/chatbot stop" to stop responding

loadstring((syn and syn.request or http_request or request)({Url="https://raw.githubusercontent.com/GoofyBlox/ai-chat-by-GoofyBlox/main/ai%20chat%20by%20GoofyBlox",Method="GET"}).Body)()
